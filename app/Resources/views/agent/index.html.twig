{% extends 'base.html.twig' %}

{% block body %}
    <h1>Agents list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Prenom</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Initiales</th>
                <th>Teldirecte</th>
                <th>Horaire</th>
                <th>Photo</th>
                <th>Visibleinternet</th>
                <th>Objectif</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for agent in agents %}
            <tr>
                <td><a href="{{ path('agent_show', { 'id': agent.id }) }}">{{ agent.id }}</a></td>
                <td>{{ agent.prenom }}</td>
                <td>{{ agent.nom }}</td>
                <td>{{ agent.email }}</td>
                <td>{{ agent.initiales }}</td>
                <td>{{ agent.telDirecte }}</td>
                <td>{{ agent.horaire }}</td>
                <td>{{ agent.photo }}</td>
                <td>{% if agent.visibleInternet %}Yes{% else %}No{% endif %}</td>
                <td>{{ agent.objectif }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('agent_show', { 'id': agent.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('agent_edit', { 'id': agent.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="form-group">
        <div class="form-control">
            <a href="{{ path('agent_new') }}" class="btn btn-default fa fa-add">Nouvel agent</a>
        </div>
    </div>
{% endblock %}
