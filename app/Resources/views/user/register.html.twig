{% extends "base.html.twig" %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block body %}
    <div>
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="wizard-title">Cr√©er nouvel utilisasteur</h5>
                </div>
                <div class="modal-body">
                    <div class="register-box" style="margin-top: 0px !important;">
                        <div class="card">
                            <div class="card-body register-card-body">
                                {{ form_start(form) }}
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fa fa-user"></i></span>
                                        </div>
                                        {{ form_widget(form.nomUtilisateur, {'attr': {'class': "form-control", 'placeholder': "Nom d'utilisateur"}}) }}
                                    </div>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                                        </div>
                                        {{ form_widget(form.email, {'attr': {'class': "form-control", 'placeholder': "Adresse email"}}) }}
                                    </div>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fa fa-lock"></i></span>
                                        </div>
                                        {{ form_widget(form.plainPassword, {'attr': {'class': "form-control", 'placeholder': "Nom d'utilisateur"}}) }}
                                    </div>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fa fa-shield"></i></span>
                                        </div>
                                        {{ form_widget(form.roleid, {'attr': {'class': "form-control"}}) }}
                                    </div>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fa fa-user-circle-o"></i></span>
                                        </div>
                                        {{ form_widget(form.agent, {'attr': {'class': "form-control"}}) }}
                                    </div>
                                    <input type="submit" class="btn btn-primary" value="Enregistrer">
                                {{ form_end(form) }}
                            </div>
                            <!-- /.form-box -->
                        </div><!-- /.card -->
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}