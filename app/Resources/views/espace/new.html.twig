{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block body %}

                    {{ form_start(form)}}
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#infoPanel" role="tab">Connfiguration du locale</a>
                        <li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#ads" role="tab">Passions / Destinations</a>
                        <li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#placementPanel" role="tab">Formations</a>
                        <li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#schedulePanel" role="tab">Cursus</a>
                        <li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#reviewPanel" role="tab">Infos signature</a>
                        <li>
                    </ul>

                    <div class="tab-content mt-2">
                        <div class="tab-pane fade show active" id="infoPanel" role="tabpanel">
                            <h4>Choisir la langue</h4>
                            <div class="form-group">
                                <div>
                                    {{ form_widget(form.locale, {'attr': {'placeholder':"Code du locale. ex : FR, EN...", 'value': espace.locale}}) }}
                                </div>
                                <br>
                            </div>
                            <button class="btn btn-primary" id="infoContinue">Suivant >></button>
                        </div>
                        <div class="tab-pane fade" id="ads" role="tabpanel">
                            <h4>Passion</h4>
                            <div class="form-group">
                                <div>
                                    {{ form_widget(form.destinationTitre, {'attr': {'placeholder':"Titre", 'value': espace.destinationTitre}}) }}
                                </div>
                                <br>
                                <div>
                                    {{ form_widget(form.destinationContenu, {'attr': {'placeholder':"Contenus", 'value':espace.destinationContenu}}) }}
                                </div>
                            </div>
                            <h4>Destinations</h4>
                            <div class="form-group">
                                <div>
                                    {{ form_widget(form.passionTitre, {'attr': {'placeholder':"Titre", 'value': espace.destinationTitre}}) }}
                                </div>
                                <br>
                                <div>
                                    {{ form_widget(form.passionContenu, {'attr': {'placeholder':"Contenus", 'value':espace.destinationContenu}}) }}
                                </div>
                            </div>
                            <button class="btn btn-secondary" id="adsRetour"><< Retour</button>
                            <button class="btn btn-primary" id="adsContinue">Suivant >></button>

                        </div>
                        <div class="tab-pane fade" id="placementPanel" role="tabpanel">
                            <h4>Formation</h4>
                            <div class="form-group">
                                <div>
                                    {{ form_widget(form.formationTitre, {'attr': {'placeholder':"Titre", 'value': espace.formationTitre}}) }}
                                </div>
                                <br>
                                <div>
                                    {{ form_widget(form.formationContenu, {'attr': {'placeholder':"Contenus", 'value': espace. formationContenu}}) }}
                                </div>
                            </div>
                            <button class="btn btn-secondary" id="placementRetour"><< Retour </button>
                            <button class="btn btn-secondary" id="placementContinue">Suivant >></button>
                        </div>
                        <div class="tab-pane fade" id="schedulePanel" role="tabpanel">
                            <h4>Cursus</h4>
                            <div class="form-group">
                                <div>
                                    {{ form_widget(form.cursus, {'attr': {'placeholder':"Cursus", 'value': espace.cursus}}) }}
                                </div>
                                <br>
                                <div>
                                    {{ form_widget(form.cursusSolidaire, {'attr': {'placeholder':"Cursus solidaire", 'value': espace.cursusSolidaire}}) }}
                                </div>
                                <br>
                            </div>
                            <button class="btn btn-secondary" id="scheduleRetour"><< Retour </button>
                            <button class="btn btn-secondary" id="scheduleContinue">Suivant >></button>
                        </div>
                        <div class="tab-pane fade" id="reviewPanel" role="tabpanel">
                            <h4>Informations dans la signature</h4>
                            <div class="form-group">
                                <div>
                                    {{ form_widget(form.signatureTel, {'attr': {'placeholder':"TÃ©lephone directe", 'value': espace.signatureTel}}) }}
                                </div>
                                <br>
                                <div>
                                    {{ form_widget(form.signatureHoraireTravail, {'attr': {'placeholder':"Horaire de travail", 'value': espace.signatureHoraireTravail}}) }}
                                </div>
                                <br>
                                <div>
                                    {{ form_widget(form.signatureVisuel, {'attr': {'placeholder':"Visuel", 'value': espace.signatureVisuel}}) }}
                                </div>
                                <br>
                                <div>
                                    {{ form_widget(form.phrase, {'attr': {'placeholder':"Phrase d'accroche", 'value': espace.phrase}}) }}
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block" id="activate">Enregistrer les modifications</button>
                        </div>
                    </div>
                    <div class="progress mt-5">
                        <div class="progress-bar" role="progressbar" style="width: 20%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">Step 1 of 5</div>
                    </div>
                {{ form_end(form) }}


{% endblock %}
{% block javascripts %}
    <script src="{{ asset('plugins/jquery/jquery.min.js') }}"></script>
    <script>
        $(function () {

            $('#infoContinue').click(function (e) {
                e.preventDefault();
                $('.progress-bar').css('width', '40%');
                $('.progress-bar').html('Step 2 of 5');
                $('#myTab a[href="#ads"]').tab('show');
            });

            $('#adsContinue').click(function (e) {
                e.preventDefault();
                $('.progress-bar').css('width', '60%');
                $('.progress-bar').html('Step 3 of 5');
                $('#myTab a[href="#placementPanel"]').tab('show');
            });
            $('#adsRetour').click(function (e) {
                e.preventDefault();
                $('.progress-bar').css('width', '20%');
                $('.progress-bar').html('Step 1 of 5');
                $('#myTab a[href="#infoPanel"]').tab('show');
            });

            $('#placementContinue').click(function (e) {
                e.preventDefault();
                $('.progress-bar').css('width', '80%');
                $('.progress-bar').html('Step 4 of 5');
                $('#myTab a[href="#schedulePanel"]').tab('show');
            });

            $('#placementRetour').click(function (e) {
                e.preventDefault();
                $('.progress-bar').css('width', '40%');
                $('.progress-bar').html('Step 2 of 5');
                $('#myTab a[href="#ads"]').tab('show');
            });

            $('#scheduleContinue').click(function (e) {
                e.preventDefault();
                $('.progress-bar').css('width', '100%');
                $('.progress-bar').html('Step 5 of 5');
                $('#myTab a[href="#reviewPanel"]').tab('show');
            });
            $('#scheduleRetour').click(function (e) {
                e.preventDefault();
                $('.progress-bar').css('width', '80%');
                $('.progress-bar').html('Step 3 of 5');
                $('#myTab a[href="#placementPanel"]').tab('show');
            });
        })
    </script>
{% endblock %}
